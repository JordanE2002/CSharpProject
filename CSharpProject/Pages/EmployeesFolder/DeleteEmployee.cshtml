@page "{id:int}"
@model CSharpProject.Pages.EmployeesFolder.DeleteEmployeeModel
@{
    ViewData["Title"] = "Delete Employee";
}

<h1 class="mb-3">Delete Employee</h1>
<p class="text-warning">Are you sure you want to delete this employee?</p>

<div class="card shadow-sm border-warning">
    <div class="card-header bg-warning text-dark">
        Confirm Deletion
    </div>
    <div class="card-body">
        <div class="table-responsive mb-4">
            <table class="table table-bordered align-middle mb-0">
                <tbody>
                    <tr>
                        <th style="width: 200px;">First Name</th>
                        <td>@Model.Employee.FirstName</td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>@Model.Employee.LastName</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Employee.Email</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>@Model.Employee.PhoneNumber</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <form method="post" class="d-flex justify-content-end gap-2">
            <input type="hidden" asp-for="Employee.Id" />
            <button type="submit" class="btn btn-warning">Archive</button>
            <a asp-page="/Employees" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
