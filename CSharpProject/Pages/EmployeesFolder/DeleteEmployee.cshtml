@page "{id:int}"
@model CSharpProject.Pages.EmployeesFolder.DeleteEmployeeModel
@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>

<h3>Are you sure you want to delete this employee?</h3>

<div class="card mt-4 p-3">
    <dl class="row">
        <dt class="col-sm-3">First Name</dt>
        <dd class="col-sm-9">@Model.Employee.FirstName</dd>

        <dt class="col-sm-3">Last Name</dt>
        <dd class="col-sm-9">@Model.Employee.LastName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Employee.Email</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@Model.Employee.PhoneNumber</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Employee.Id" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-page="/Employees" class="btn btn-secondary">Cancel</a>
    </form>
</div>
