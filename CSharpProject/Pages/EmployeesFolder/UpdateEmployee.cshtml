@page "{id:int}"
@model CSharpProject.Pages.EmployeesFolder.UpdateEmployeeModel
@{
    ViewData["Title"] = "Update Employee";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="max-width: 600px; width: 100%;">
        <h2 class="card-title mb-4 text-center">Update Employee</h2>

        <form method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Employee.Id" />

            <validation-summary asp-validation-summary="All" class="text-danger mb-3"></validation-summary>

            <div class="form-floating mb-3">
                <input asp-for="Employee.FirstName" class="form-control" id="EmployeeFirstName" placeholder="First Name" />
                <label for="EmployeeFirstName">First Name</label>
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Employee.LastName" class="form-control" id="EmployeeLastName" placeholder="Last Name" />
                <label for="EmployeeLastName">Last Name</label>
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Employee.Email" type="email" class="form-control" id="EmployeeEmail" placeholder="Email address" />
                <label for="EmployeeEmail">Email address</label>
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Employee.PhoneNumber" class="form-control" id="EmployeePhoneNumber" placeholder="Phone Number" />
                <label for="EmployeePhoneNumber">Phone Number</label>
                <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Employee.CompanyId" class="form-label">Company</label>
                <select asp-for="Employee.CompanyId" asp-items="Model.Companies" class="form-select">
                    <option value="">-- Select Company --</option>
                </select>
                <span asp-validation-for="Employee.CompanyId" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 justify-content-center">
                <button type="submit" class="btn btn-primary px-4">Update</button>
                <a asp-page="/Employees" class="btn btn-outline-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
