@page "/Home"
@model CSharpProject.Pages.HomeModel
@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="mb-4">Dashboard</h1>

<!-- Action Cards -->
<div class="row g-4 mb-4">
    <!-- Company Card -->
    <div class="col-12 col-md-6">
        <div class="card shadow-sm h-100 bg-card">
            <div class="card-body">
                <h4 class="card-title">Companies</h4>
                <p class="card-text">Manage your companies: view, create, edit, or delete company details.</p>
                <a asp-page="/Companies" class="btn bg-button me-2 mb-2">View Companies</a>
                <a asp-page="/CompaniesFolder/CreateCompany" class="btn bg-button2 mb-2">Add New Company</a>
            </div>
        </div>
    </div>

    <!-- Employee Card -->
    <div class="col-12 col-md-6">
        <div class="card shadow-sm h-100 bg-card">
            <div class="card-body">
                <h4 class="card-title">Employees</h4>
                <p class="card-text">Manage employees: view all employees or add new ones quickly.</p>
                <a asp-page="/Employees" class="btn bg-button me-2 mb-2">View Employees</a>
                <a asp-page="/EmployeesFolder/CreateEmployee" class="btn bg-button2 mb-2">Add New Employee</a>
            </div>
        </div>
    </div>
</div>

<!-- Latest Entries -->
<div class="row g-4">
    <!-- Latest Companies -->
    <div class="col-12 col-lg-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">Latest Companies</h5>
                @if (Model.LatestCompanies.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Website</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var company in Model.LatestCompanies)
                                {
                                    <tr>
                                        <td>@company.Name</td>
                                        <td>@company.Email</td>
                                        <td><a href="@company.Website" target="_blank">@company.Website</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p><em>No companies found.</em></p>
                }
            </div>
        </div>
    </div>

    <!-- Latest Employees -->
    <div class="col-12 col-lg-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">Latest Employees</h5>
                @if (Model.LatestEmployees.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Company</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var emp in Model.LatestEmployees)
                                {
                                    <tr>
                                        <td>@emp.FirstName @emp.LastName</td>
                                        <td>@emp.Email</td>
                                        <td>@emp.Company?.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p><em>No employees found.</em></p>
                }
            </div>
        </div>
    </div>
</div>

