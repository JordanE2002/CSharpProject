@page "{id:int}"
@model CSharpProject.Pages.CompaniesFolder.UpdateCompanyModel
@{
    ViewData["Title"] = "Update Company";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="max-width: 600px; width: 100%;">
        <h2 class="card-title mb-4 text-center">Update Company</h2>

        <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Company.Id" />

            <validation-summary asp-validation-summary="All" class="text-danger mb-3"></validation-summary>

            <div class="form-floating mb-3">
                <input asp-for="Company.Name" class="form-control" id="CompanyName" placeholder="Company Name" />
                <label for="CompanyName">Company Name</label>
                <span asp-validation-for="Company.Name" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Company.Email" type="email" class="form-control" id="CompanyEmail" placeholder="Email address" />
                <label for="CompanyEmail">Email address</label>
                <span asp-validation-for="Company.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Company.Website" type="url" class="form-control" id="CompanyWebsite" placeholder="Website URL" />
                <label for="CompanyWebsite">Website URL</label>
                <span asp-validation-for="Company.Website" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Current Logo</label><br />
                @if (!string.IsNullOrEmpty(Model.Company.Logo))
                {
                    <img src="@Model.Company.Logo" alt="Current Logo" style="max-height:100px;" class="rounded border" />
                }
                else
                {
                    <p class="text-muted">No logo uploaded.</p>
                }
            </div>

            <div class="mb-4">
                <label asp-for="LogoFile" class="form-label">Upload New Logo (min 100x100 pixels)</label>
                <input asp-for="LogoFile" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="LogoFile" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 justify-content-center">
                <button type="submit" class="btn bg-button px-4">Save Changes</button>
                <a asp-page="/Companies" class="btn btn-outline-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
