@page "{id:int}"
@model CSharpProject.Pages.CompaniesFolder.DeleteCompanyModel
@{
    ViewData["Title"] = "Delete Company";
}

<h1>Delete Company</h1>

<h3>Are you sure you want to delete this company?</h3>

<div class="card mt-4 p-3">
    @if (!string.IsNullOrEmpty(Model.Company.Logo))
    {
        <img src="@Model.Company.Logo" alt="@Model.Company.Name Logo"
             style="max-height: 150px; object-fit: contain;" class="mb-3" />
    }

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Company.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Company.Email</dd>

        <dt class="col-sm-2">Website</dt>
        <dd class="col-sm-10">@Model.Company.Website</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Company.Id" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-page="/Companies" class="btn btn-secondary">Cancel</a>
    </form>
</div>

