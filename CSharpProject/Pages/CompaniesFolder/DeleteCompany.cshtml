@page "{id:int}"
@model CSharpProject.Pages.CompaniesFolder.DeleteCompanyModel
@{
    ViewData["Title"] = "Delete Company";
}

<div class="container mt-5">
    <h1 class="display-5 mb-3">Delete Company</h1>
    <h5 class="text-muted mb-4">Are you sure you want to delete this company?</h5>

    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
    {
        <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Company.Name</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Company.Email</dd>

                        <dt class="col-sm-4">Website</dt>
                        <dd class="col-sm-8">@Model.Company.Website</dd>
                    </dl>
                </div>
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.Company.Logo))
                    {
                        <img src="@Model.Company.Logo" alt="@Model.Company.Name Logo"
                             class="img-fluid rounded border"
                             style="max-height: 150px; object-fit: contain;" />
                    }
                </div>
            </div>

            @if (Model.HasEmployees)
            {
                <div class="alert alert-warning mt-4">
                    This company still has employees assigned. You must remove or reassign them before deletion.
                </div>
            }
            else
            {
                <form method="post" class="d-flex justify-content-between mt-4">
                    <input type="hidden" asp-for="Company.Id" />
                    <a asp-page="/Companies" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </form>
            }
        </div>
    </div>
</div>
