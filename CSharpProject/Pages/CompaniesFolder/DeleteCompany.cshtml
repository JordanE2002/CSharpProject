@page "{id:int}"
@model CSharpProject.Pages.CompaniesFolder.DeleteCompanyModel
@{
    ViewData["Title"] = "Archive Company";
}

<div class="container mt-5">
    <h1 class="display-5 mb-3">Archive Company</h1>
    <h5 class="text-warning mb-4">Are you sure you want to archive this company?</h5>

    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
    {
        <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
    }

    <div class="card shadow-sm border-warning">
        <div class="card-header bg-warning text-dark">
            Company Details
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>Name</th>
                    <td>@Model.Company.Name</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Company.Email</td>
                </tr>
                <tr>
                    <th>Website</th>
                    <td>
                        <a href="@Model.Company.Website" target="_blank" rel="noopener noreferrer">
                            @Model.Company.Website
                        </a>
                    </td>
                </tr>
            </table>

            @if (Model.HasEmployees)
            {
                <!-- ❌ Block deletion -->
                <div class="alert alert-warning mt-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>
                            This company still has employees assigned.
                            You must remove or reassign them before archiving.
                        </span>
                        <a asp-page="/CompaniesFolder/ViewEmployees"
                           asp-route-companyId="@Model.Company.Id"
                           class="btn bg-button2">
                            View Company Employees
                        </a>
                    </div>
                </div>
            }
            else
            {
                <!-- Show confirm archive if no employees -->
                <form method="post" class="d-flex justify-content-end gap-2 mt-4">
                    <input type="hidden" asp-for="Company.Id" />
                    <a asp-page="/Companies" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-warning text-dark">Confirm Archive</button>
                </form>
            }
        </div>
    </div>
</div>
