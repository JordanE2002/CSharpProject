@page
@model CSharpProject.Pages.CompaniesFolder.ViewEmployeesModel
@{
    ViewData["Title"] = "Employees";
}

@if (Model.Employees != null && Model.Employees.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model.Employees)
            {
                <tr>
                    <td>@emp.FirstName</td>
                    <td>@emp.LastName</td>
                    <td>@emp.Email</td>
                    <td>@emp.PhoneNumber</td>
                    <td>
                        <a asp-page="/EmployeesFolder/UpdateEmployee"
                           asp-route-id="@emp.Id"
                           class="btn bg-button2 btn-sm me-1">
                            Edit
                        </a>

                        <a asp-page="/EmployeesFolder/DeleteEmployee"
                           asp-route-id="@emp.Id"
                           class="btn btn-danger btn-sm me-1">
                            Delete
                        </a>

                        
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>No employees found for this company.</em></p>
}

<a asp-page="/Companies" class="btn bg-button mt-3">Back to Companies</a>
