@page
@model CSharpProject.Pages.CompaniesFolder.ViewEmployeesModel
@{
    ViewData["Title"] = "Employees";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Employees</h1>
    <a asp-page="/EmployeesFolder/CreateEmployee" asp-route-companyId="@Model.CompanyId" class="btn btn-primary">
        + Create Employee
    </a>
</div>

@if (Model.Employees != null && Model.Employees.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model.Employees)
            {
                <tr>
                    <td>@emp.FirstName</td>
                    <td>@emp.LastName</td>
                    <td>@emp.Email</td>
                    <td>@emp.PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>No employees found for this company.</em></p>
}

<a asp-page="/Companies" class="btn btn-secondary mt-3">Back to Companies</a>
